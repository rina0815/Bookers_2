<div class="body">
  <div class="container">
    <% if @book.errors.any? %>
      <p id="notice">
        <div id="error_explanation">
          <h3>
            <%= pluralize(@book.errors.count, "error") %> error prohibited this obj from being saved:
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </p>
    <% end %>
    <!-- ここからユーザー情報 -->
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>

        <!-- user画像の情報を入れる -->
        <tbody>
          <tr>
            <th>name</th>
            <th>
              <!-- 名前のユーザー情報入れる -->
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
              <!-- ユーザーの編集したものの投稿先 -->
            </th>
          </tr>
        </tbody>
        <div class="row">
            <!-- /users/id/editのリンクを張る↓ -->
          <%= link_to edit_user(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_21696" %>
        </div>
        <!-- ここまでユーザー情報 -->
        <h2>New book</h2>
        <!-- ここからが投稿ページ -->
        <%= form_for @book, :url => {controller: "books", action: "create"} do |f| %><!-- form_for記入 -->
          <div class="field row">
            <label for="book_title">Title</label>
              <%= f.text_field :title, class:"col-xs-12" %>
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:"col-xs-12" %>
          </div>
          <div class="actions row">
            <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
          </div>
        <% end %>
      </div>
      <!-- 右側ページ -->
      <div class="col-xs-9">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><!-- userアイコン&rリンク挿入 -->
                  <img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" alt="No image icon">
                </td>
                <td>
                  <%= user.name %><!-- user -->
                </td>
                <td>
                  <%= link_to "show", user_path(user) %><!-- shoe -->
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>