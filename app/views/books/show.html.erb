<div class="body">
  <div class="container">
    <p id="notice">
      <%= notice %>
    </p>
    <!-- ここからユーザー情報 -->
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th>
                <%= @user.name %>
              </th>
            </tr>
            <tr>
              <th>introduction</th>
              <th>
                <%= @user.introduction %>
              </th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to " ", edit_user_path(@user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        </div>
        <!-- ここからが投稿ページ -->
        <h2>New book</h2>
        <%= form_for(@new_book) do |f| %><!-- form_for記入 -->
          <div class="field row">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"col-xs-12" %>
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:"col-xs-12" %>
          </div>
          <div class="actions row">
            <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
          </div>
        <% end %><!-- ここまで投稿ページ -->
      </div>
<!-- 右側ページ -->
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to (attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg",size:'100x100') %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book) %><!-- Title -->
              </td>
              <td>
                <%= @book.body %><!-- Opinion -->
              </td>
              <% if @book.user == current_user %>
                <td>
                    <%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success edit_book_34534" %>
                </td>
                <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn-sm btn-danger destroy_book_34534" %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>